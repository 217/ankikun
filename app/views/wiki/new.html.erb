<%= javascript_include_tag 'nicEdit' -%>
<script type="text/javascript">
       bkLib.onDomLoaded(function() { nicEditors.allTextAreas() });
</script>

<h1>Wikiを新規作成</h1>

<% if params[:id].nil? %>
	<%= form_for @wiki,:url => {:action => "create"} do |f| %>
		<%= f.label :title %> : <%= f.text_field :title %><br />
		<%= f.label :body %> : <br />
		<%= f.fields_for :wikipage do |f1| %>
			<%= f1.text_area :body, :cols => "100", :rows => "15" %>
		<% end %>
		<br>
		<%= f.submit "送信" %>
	<% end %>
<% else %> 
	<%= form_for @page, :url => {:action =>"create"} do |f| %>
		<%= f.label :title %> : <%= f.text_field :title %>
		<br>
		<%= f.label :body %> : <br>
		<%= f.text_area :body %>
		<br>
		<%= f.submit "送信" %>
	<% end %>
<% end %>
