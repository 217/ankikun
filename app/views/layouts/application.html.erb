<!DOCTYPE html>
<html>
  <head>
  <title>暗記君 ONLINE</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag "bootstrap", "bootstrap-responsive" %>
	<%= stylesheet_link_tag "setting" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "bootstrap" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- メニューバー -->
  <div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>
        <a class="brand" href="/">
          暗記君 ONLINE
        </a>
				<div class="nav-collapse">
					<ul class="nav">
            <li class="dropdown">
            <a href="/wiki/index" class="dropdown-toggle" data-toggle="dropdown">
              勉強、まとめ
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "まとめの一覧", "/wiki/index" %></li>
              <li><%= link_to "まとめの新規作成", "/wiki/new" %></li>
            </ul>
            </li>
            <li class="dropdown">
              <a href="/wiki/index" class="dropdown-toggle" data-toggle="dropdown">
                質問
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "質問の一覧", "/ask/index" %></li>
                <li><%= link_to "質問の新規作成", "/ask/new" %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="/wiki/index" class="dropdown-toggle" data-toggle="dropdown">
                試験
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "試験の一覧", "/exam/index" %></li>
                <li><%= link_to "試験の新規作成", "/exam/new" %></li>
              </ul>
            </li>
            <li class="dropdown">
            <% if user_signed_in? %>
              <a href="/wiki/index" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.email %>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "ログアウト",destroy_user_session_path %></li>
              </ul>
            <% else %>
              <%= link_to "ログイン" ,new_user_session_path %>
            <% end %>
            </li>
					</ul>
				</div>
			</div>
		</div>
  </div>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

	<%= yield %>
</body>
</html>
