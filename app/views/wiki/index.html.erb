<% if params[:id].nil? %>
	<h1>Wiki一覧</h1>	

	<table>
		<tr>
			<th>Wiki番号</th>
			<th>Wikiタイトル</th>
			<th>作成時間</th>
			<th>更新時間</th>
		</tr>

		<% @wikis.each_with_index do |wiki, i| %>
			<tr>
				<td><%= wiki.id %></td>
				<td><%= link_to wiki.title, "/wiki/#{wiki.id}/index" %></td>
				<td><%= wiki.created_at %></td>
				<td><%= wiki.updated_at %></td>
			</tr>
		<% end %>
	</table>
<% else %>
	<center>
		<h1><%= @wiki.title %></h1>
		<% toppage = Wikipage.find(:first, :conditions => {:wiki_id => params[:id], :wikipage_id => 1}) %>
		<%= toppage.body.html_safe %>
	</center>
<% end %>
