<%= javascript_include_tag 'nicEdit' -%>
<script type="text/javascript">
       bkLib.onDomLoaded(function() { nicEditors.allTextAreas() });
</script>

<% if params[:id].nil? %>
	<%= link_to "トップページ", "http://localhost:3000/" %>
	<%= link_to "Wikiの一覧まで戻る", "/wiki/index" %>
	<h1>Wikiを新規作成</h1>

	<%= form_for @wiki,:url => {:action => "create"} do |f| %>
		Wikiタイトル : <%= f.text_field :title %>
		<br />
		<br />
		本文 : 
		<br />
		<%= f.fields_for :wikipage do |f1| %>
			<%= f1.text_area :body, :cols => "120", :rows => "25" %>
		<% end %>
		<br>
		<%= f.submit "送信" %>
	<% end %>
<% else %> 
	<h1>ページの新規作成</h1>
	<%= form_for @page, :url => {:action =>"create"} do |f| %>
		ページタイトル : <%= f.text_field :title %>
		<br />
		<br />
		本文 : <br />
		<%= f.text_area :body, :cols => "120", :rows => "25"%>
		<br />
		<%= f.submit "送信" %>
	<% end %>
<% end %>
