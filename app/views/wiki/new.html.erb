<%= javascript_include_tag 'nicEdit' -%>
<script type="text/javascript">
       bkLib.onDomLoaded(function() { nicEditors.allTextAreas() });
</script>

<div class="container">
	<%# /wiki/new %>
  <%# Wikiを新規作成 %>

  <% if params[:id].nil? %>
    <%#= render :partial => "list" %>

		<div id="header">
			<h1>まとめを新規作成</h1>
		</div>

    <div class="row">
			<%= form_for @wiki, :url => {:action => "create"} do |f| %>
				まとめタイトル : <%= f.text_field :title %>
				<br />
				<br />
				本文 : 
				<br />
				<%= f.fields_for :wikipage do |f1| %>
					<%= f1.text_area :body, :cols => "120", :rows => "25", :class => "maxsize" %>
				<% end %>
				<br />
				<%= f.submit "送信" %>
			<% end %>
		</div>
	<%# /wiki/:id/new %>
	<%# Wikiのページを新規作成 %>
	<% else %> 
		<div id="header">
			<h1>ページの新規作成</h1>
		</div>

		<div class="row">
			<%= form_for @page, :url => {:action =>"create"} do |f| %>
				ページタイトル : <%= f.text_field :title %>
				<br />
				<br />
				本文 : <br />
				<%= f.text_area :body, :cols => "120", :rows => "25", :class => "maxsize" %>
				<br />
				<%= f.submit "送信" %>
			<% end %>
		</div>
	<% end %>
</div>
