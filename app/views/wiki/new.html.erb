<textarea id="some-textarea" class='wysihtml5' placeholder="Enter text ..."></textarea>

<script type="text/javascript">
	$(function(){
	  $('.wysihtml5').each(function(i, elem) {
  	  $(elem).wysihtml5();
  	});
	});
</script>

<% if false %>
<%= javascript_include_tag "jquery.wysiwyg.js" %>
<%= javascript_include_tag %>
<h1>Wikiを新規作成</h1>

<% if params[:id].nil? %>
	<%= form_for @wiki,:url => {:action => "create"} do |f| %>
		<%= f.label :title %> : <%= f.text_field :title %>
		<%= f.label :body %> : <br />
		<%= f.text_area :body %>
		<br>
		<%= f.submit "送信" %>
	<% end %>
<% else %> 
	<%= form_for @page, :url => {:action =>"create"} do |f| %>
		<%= f.label :title %> : <%= f.text_field :title %>
		<br>
		<%= f.label :body %> : <br>
		<%= f.text_area :body %>
		<br>
		<%= f.submit "送信" %>
	<% end %>
<% end %>
<% end %>
