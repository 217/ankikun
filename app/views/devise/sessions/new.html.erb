<div class="hero-unit">
  <%= render "devise/shared/links" %>
  <br />
  <h1>ログイン</h1>
  <br />
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email %>

    <%= f.label "パスワード" %>
    <%= f.password_field :password %>

    <br />

    <% if devise_mapping.rememberable? -%>
      パスワードを保存 : <%= f.check_box :remember_me %>
    <% end -%>

    <div><%= f.submit "ログイン" %>
  <% end %>
</div>
